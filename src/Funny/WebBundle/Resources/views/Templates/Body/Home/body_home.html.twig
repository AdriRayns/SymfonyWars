{% extends 'baseFunny.html.twig' %}
{% block body %}
<!-- ROW de NOVEDADES-->
<div class="row">
    {% if (products is defined and products is not empty) %}
    <!-- @if($datos['primerDestacado'] != null) -->
    <div class="col-xs-12 col-sm-12 col-lg-12 ">
        <header class=""><h4 class="funny-header"> PRODUCTOS DESTACADOS</h4></header>
        <div id="myCarouselDestacados" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators indicators">
            {%set countHighlights = 0 %}
            {% for product in products %}
                {% if (products is not null and product.highlight and not loop.first) %} 
                    {%set countHighlights = countHighlights+1 %}
                    <li data-target="#myCarouselDestacados" data-slide-to="{{countHighlights}}"></li>
                {%elseif (products is not null and product.highlight and loop.first) %}
                    <li data-target="#myCarouselDestacados" data-slide-to="{{countHighlights}}" class="active"></li>
                {%endif%}
            {%endfor%}
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner " role="listbox">

                <!-- ITEM 1 carousel-->
                <div class="item active">
                    <div class="col-xs-6 col-sm-4 col-lg-4 vOffset3 nombreDestacados">
                        <p style="text-decoration:underline;">{{products[0].name}}</p>
                        <p >Precio: {{products[0].price}} €</p>
                        <p>Descuento: {{products[0].discount}} % </p>
                    </div>
                    <div class="col-xs-6 col-sm-4 col-lg-4 vOffset1">
                         {% if products[0].ImgRoute is not null %}
                            <img class="img-responsive img-center" src="/{{products[0].getWebPath}}" title="{{products[0].name}}" alt="{{products[0].name}}">
                        {% else %}
                            <img class="img-responsive img-center" src="{{asset('bundles/web/img/default_notFound.png') }}" title="{{product.name}}" alt="{{product.name}}">
                        {% endif %}
                    </div>
                    <div class="hidden-xs col-sm-4 col-lg-4 vOffset3 highlightDescription">
                        <p>{{products[0].description}}</p>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-12 ">
                        <a href="{{ path('product_see', {'product_slug': products[0].slug }) }}" class="btn btn-primary " style="margin-right:5%;float:right;"role="button">Ver Producto</a>
                    </div>
                </div>
                <!-- ITEM 2 carousel-->
                {% for product in products %}
                    {% if (product.highlight and not loop.first) %}
                        <div class="item">
                            <div class="col-xs-6 col-sm-4 col-lg-4 vOffset3 nombreDestacados">
                                <p style="text-decoration:underline;">{{product.name}} </p>
                                <p>Precio: {{product.price}} €</p>
                                <p>Descuento: {{product.discount}} % </p>
                            </div>
                            <div class="col-xs-6 col-sm-4 col-lg-4 vOffset1">
                                {% if product.ImgRoute is null %}
                                <img class="img-responsive img-center" src="{{asset('bundles/web/img/') ~'default_notFound.png' }}" title="{{product.name}}" alt="{{product.name}}">
                                {% else %}
                                <img class="img-responsive img-center" src="/{{product.getWebPath}}" title="{{product.name}}" alt="{{product.name}}">
                                {% endif %}
                            </div>
                            <div class="hidden-xs col-sm-4 col-lg-4 vOffset3 highlightDescription ">
                                <p>{{product.description}}</p>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-lg-12 ">
                                <a href="{{ path('product_see', {'product_slug': product.slug }) }}" class="btn btn-primary " style="margin-right:5%;float:right;"role="button">Ver Producto</a>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
                <!-- @endforeach -->
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control carousel-controls-color caroulsel-smaller-controls" href="#myCarouselDestacados" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left " aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control carousel-controls-color caroulsel-smaller-controls" href="#myCarouselDestacados" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right " aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="">
        </div>
    </div>
    <!-- @endif -->
    {% endif %}
</div>
<!-- END ROW de NOVEDADES-->
<hr>
